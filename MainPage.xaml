<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RTCChat.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" HeightRequest="50">
            <Border.Content>
                <VerticalStackLayout>
                    
                    <Entry Placeholder="Login"/>
                </VerticalStackLayout>
            </Border.Content>
        </Border>

        <Entry Grid.Row="1" Placeholder="ID room"/>
        <Button Text="Connect" Grid.Row="1"/>

        <Button Grid.Row="2" Text="Create room"/>
    </Grid>

</ContentPage>
