<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RTCChat.MainPageV2">
    
    <Grid RowSpacing="60" Margin="26,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <HorizontalStackLayout HorizontalOptions="Center">
                <!--<Image Source="ellipse1.png" VerticalOptions="Center"/>-->
                <Label Text="Bair" FontSize="64" FontFamily="Irish"/>
            </HorizontalStackLayout>
            <Label Text="{Binding Title}" FontSize="24" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" VerticalOptions="End">
            <Border Margin="0,50">
                <Border.Content>
                    <VerticalStackLayout>
                        <Entry Placeholder="Логин" Text="{Binding Login}"/>
                    </VerticalStackLayout>
                </Border.Content>
            </Border>
            <Button Style="{StaticResource ContrastButton}" Text="Войти в комнату" Command="{Binding EnterCommand}"/>
            <Button Style="{StaticResource ContrastButton2}" Text="Создать комнату" Command="{Binding CreateCommand}"/>
            <Label Text="Beta" FontSize="15" HorizontalTextAlignment="Center" Margin="0,20"/>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>